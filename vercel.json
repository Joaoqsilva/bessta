{
    "version": 2,
    "builds": [
        {
            "src": "server/api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/server/api/index.ts"
        },
        {
            "source": "/assets/(.*)",
            "destination": "/assets/$1"
        },
        {
            "source": "/vite.svg",
            "destination": "/vite.svg"
        },
        {
            "source": "/og-image.png",
            "destination": "/og-image.png"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}